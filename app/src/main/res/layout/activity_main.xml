<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertidor"
        android:textSize="40dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40dp"
        android:gravity="center"
        />


    <TableRow >

        <TextView
            android:id="@+id/textViewCel"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="C°"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="156dp" />

        <EditText
            android:id="@+id/editTextTextCel"
            android:layout_width="119dp"
            android:layout_height="61dp"
            android:hint="00.00"
            android:layout_span="2"
            android:inputType="phone"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="142dp" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/textViewFar"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="F°"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="220dp" />

        <EditText
            android:id="@+id/editTextFar"
            android:layout_width="332dp"
            android:layout_height="60dp"
            android:layout_span="2"
            android:ems="10"
            android:hint="00.00"
            android:inputType="phone"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="206dp" />
    </TableRow>

    <TableRow  >

        <TextView
            android:id="@+id/textViewKelvin"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="K°"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="289dp" />

        <EditText
            android:id="@+id/editTextKelvin"
            android:layout_width="287dp"
            android:layout_height="56dp"
            android:layout_span="2"
            android:ems="10"
            android:hint="00.00"
            android:inputType="phone"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="282dp" />

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40dp"
        android:gravity="center"
        />

    <TableRow android:orientation="vertical">

        <Button
            android:id="@+id/buttonCel"
            android:layout_width="109dp"
            android:layout_height="wrap_content"

            android:text="C°" />

        <Button
            android:id="@+id/buttonFar"
            android:layout_width="113dp"
            android:layout_height="wrap_content"


            android:text="F°" />

        <Button
            android:id="@+id/buttonKelvin"
            android:layout_width="109dp"
            android:layout_height="wrap_content"

            android:text="K°"
            tools:layout_editor_absoluteX="273dp"
            tools:layout_editor_absoluteY="406dp" />

    </TableRow>

    <Button
        android:id="@+id/buttonLimpiar"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="Limpiar"

        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="406dp" />

</TableLayout>